{
  "app-id": "de.csnova.csNova",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "csNova",
  "modules": [
    {
      "name": "csnova",
      "buildsystem": "simple",
      "build-commands": [
        "install -D csNova /app/bin/csNova",
        "install -D de.csnova.csNova.desktop /app/share/applications/de.csnova.csNova.desktop",
        "install -D csnova.png /app/share/icons/hicolor/128x128/apps/csnova.png"
      ],
      "sources": [
        { "type": "file", "path": "dist/csNova" },
        { "type": "file", "path": "de.csnova.csNova.desktop" },
        { "type": "file", "path": "csnova.png" }
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=home",
    "--filesystem=xdg-config",
    "--filesystem=xdg-data"
  ]
}