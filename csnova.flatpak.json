{
  "app-id": "de.csnova.csNova",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "python3 /app/csNova_main.py",
  
  "modules": [
    {
      "name": "csnova",
      "buildsystem": "simple",
      "build-commands": [],
      "sources": [
        { "type": "file", "path": "csNova_main.py" },
        { "type": "dir", "path": "." }
      ],
      "post-install": [
        "pip3 install --prefix=${FLATPAK_DEST} -r requirements.txt"
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--filesystem=home",
    "--filesystem=host",
    "--env=PYTHONPATH=/app",
    "--env=QT_QPA_PLATFORM=xcb"
  ]
}